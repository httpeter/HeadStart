<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="PU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>org.httpeter.entities.Products</class>
    <class>org.httpeter.entities.Orders</class>
    <class>org.httpeter.entities.Region</class>
    <class>org.httpeter.entities.Territories</class>
    <class>org.httpeter.entities.ChatUsers</class>
    <class>org.httpeter.entities.Shippers</class>
    <class>org.httpeter.entities.OrderDetails</class>
    <class>org.httpeter.entities.BookNodes</class>
    <class>org.httpeter.entities.Categories</class>
    <class>org.httpeter.entities.BookText</class>
    <class>org.httpeter.entities.Customers</class>
    <class>org.httpeter.entities.Employees</class>
    <class>org.httpeter.entities.Suppliers</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/example"/>
      <property name="javax.persistence.jdbc.user" value="postgres"/>
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
